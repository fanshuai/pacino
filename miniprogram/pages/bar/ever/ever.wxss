.pa-anon-convert {
    width: 750rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.pa-anon-login {
    width: 750rpx;
    height: 360rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.pa-anon-func {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.pa-anon-func-desc {
    line-height: 2;
    text-align: center;
}
.pa-anon-func-slogan {
    font-size: 42rpx;
}
.pa-mpa-store {
    font-size: 26rpx;
    margin-top: 80rpx;
    line-height: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.pa-convert-view {
    width: 750rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.pa-convert-search {
    width: 750rpx;
    box-sizing: border-box;
}
.pa-convert-content {
    height: 100%;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    background-color: white;
    position: relative;
}

.pa-convert-scroll {
    height: 100%;
}

.pa-convert-label {
    display: flex;
}

.pa-convert-timer {
    font-size: 24rpx;
    color: var(--color-gray-55);
}

.pa-convert-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    margin-left: 20rpx;
    height: 96rpx;
}

.pa-convert-row {
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 420rpx;
}

.pa-conv-amount {
    font-size: 26rpx;
    text-align: center;
}
