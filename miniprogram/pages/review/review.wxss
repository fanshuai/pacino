.pa-loading-center-top {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding-top: 200rpx;
}

.pa-review-center {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.pa-review-result {
    width: 750rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-top: 100rpx;
}

.pa-review-reason {
    font-size: large;
    color: var(--color-gray-55);
}

.pa-review-gohome,
.pa-review-qrbind {
    width: 500rpx;
    /*noinspection CssInvalidFunction*/
    margin-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.pa-review-info {
    width: 750rpx;
    padding-top: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.pa-review-avatar {
    border-radius: 20rpx;
}

.pa-review-name {
    font-size: 36rpx;
    margin-top: 20rpx;
}

.pa-review-by {
    margin-top: 30rpx;
    color: var(--color-gray-55);
}

.pa-review-selfdom {
    width: 500rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    margin-top: 30rpx;
    text-align: center;
    color: var(--color-gray-55);
    background-color: var(--color-gray-c8);
    max-height: 260rpx;
    overflow-y: scroll;
}

.pa-grid-action {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    width: 100%;
}
.pa-grid-action-txt {
    margin-top: 12rpx;
}

.pa-review-action {
    left: 0;
    right: 0;
    bottom: 0;
    position: absolute;
    /*noinspection CssInvalidFunction*/
    padding-bottom: env(safe-area-inset-bottom);
    background-color: white;

}

.pa-action-icon {
    display: flex;
    align-items: center;
    justify-content: center;
}

.pa-action-txt {
    margin-left: 10rpx;
}

