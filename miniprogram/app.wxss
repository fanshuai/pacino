@import './miniprogram_npm/@vant/weapp/common/index.wxss';
@import 'theme.wxss';

page {
    width: 100%;
    height: 100%;
    background-color: var(--color-background);
}

.pa-container {
    width: 750rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
/* 加粗字体 */
.pa-font-bold {
    font-weight: bold;
}
/* 等宽字体 */
.pa-font-mono {
    font-family: RobotoMono, monospace;
}
/* 文字居中 */
.pa-text-center {
    text-align: center;
}
/* 名字截断 */
.pa-name-break {
    color: var(--color-gray-35);
    font-weight: bold;
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: 400rpx;
}
/* 头像圆角 */
.pa-avatar-radius {
    border-radius: 12rpx;
}
/* Cell Title Value 截断 */
.pa-cell-title-break,
.pa-cell-value-break {
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: 350rpx;
}
/* 按钮样式重置 */
.pa-btn-reset {
    margin: 0;
    padding: 0;
    border-radius: 0;
    background-color: transparent;
    line-height: inherit;
    font-size: inherit;
    border: none;
}
.pa-btn-reset::after{
    border: none;
}
/* 微信开放能力Cell Btn */
.pa-wxopen-cell-btn {
    width: 750rpx;
    color: var(--color-gray-88)!important;
}
.pa-safe-bottom {
    width: 100%;
    position: relative;
    /*noinspection CssInvalidFunction*/
    padding-bottom: calc(50rpx + env(safe-area-inset-bottom));
}
/* 提醒，已屏蔽、订阅消息 */
.pa-notice-bar {
    padding: 20rpx;
    color: #F49000;
    background-color: #FFFBE8;
    text-align: center;
    position: relative;
    z-index: 9;
    right: 0;
    left: 0;
    top: 0;
}
/* CellGroup 上间距 */
.pa-cell-group-top {
    margin-top: 20rpx;
}
/* 性别颜色 */
.pa-gender-0 {
    color: var(--color-gray-35);
}
.pa-gender-1 {
    color: var(--color-gender-male);
}
.pa-gender-2 {
    color: var(--color-gender-female);
}
